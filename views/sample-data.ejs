    }

    .droplet {
      width: 200px;
      height: 200px;
      display: flex;
      flex-direction: column; /* Make the text below the image */
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: transform 0.3s ease;
      border-radius: 50%; /* Make the container circular */
      overflow: hidden; /* Hide overflow to maintain circular shape */
      background-color: #e0f7fa; /* Background color for droplets */
      position: relative; /* Position relative for text positioning */
    }
    .droplet:hover {
      transform: scale(1.1);
    }

    .droplet img {
      width: 80%; /* Adjust image size as needed */
      height: auto;
    }

    .droplet-text {
      text-align: center;
      font-size: 16px;
      font-weight: bold;
      color: #004d99;
      margin-top: 10px;
    }
  </style>
